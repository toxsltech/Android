<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/textViewStyle</item>
        <item name="android:buttonStyle">@style/buttonViewStyle</item>
        <item name="editTextStyle">@style/editText</item>
        <item name="checkboxStyle">@style/CheckBoxTheme</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/White</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTheme</item>
        <item name="radioButtonStyle">@style/RadioButtonTheme</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/Black</item>
        <item name="android:navigationBarColor">@color/Black</item>

    </style>


    <style name="CustomMaterialDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@color/White</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@color/Black</item>
        <!-- Text Color for buttons -->
        <item name="colorPrimary">@color/Black</item>
        ....
    </style>


    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">@dimen/_5sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
    </style>

    <style name="MenuTheme" parent="textViewStyle">
        <item name="android:textSize">@dimen/_10sdp</item>

    </style>

    <style name="textViewStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="buttonViewStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="rippleColor">@color/DarkGreen</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/button_color</item>

    </style>

    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>


    </style>

    <style name="CheckBoxTheme" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>


    <style name="RadioButtonTheme" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
    </style>

    <style name="animateDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/pause_dialog_animation</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="pause_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="Snackbar" />

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@drawable/sb__btn_bg</item>
    </style>

    <style name="Snackbar.Text">
        <item name="android:paddingBottom">@dimen/_15dp</item>
        <item name="android:paddingLeft">@dimen/_25dp</item>
        <item name="android:paddingTop">@dimen/_15dp</item>
        <item name="android:paddingRight">@dimen/_25dp</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/White</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
